<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

  <display-name>ConnectFour JSP webapp</display-name>

  <!-- This servlet does almost everything... -->
  <servlet>
    <servlet-name>main-handler</servlet-name>
    <servlet-class>vrampal.connectfour.servlet.ConnectFourServlet</servlet-class>
  </servlet>

  <!-- Main handler as entry point for the welcome pages -->
  <servlet-mapping>
    <servlet-name>main-handler</servlet-name>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>main-handler</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/50x.html</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/50x.html</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/50x.html</location>
  </error-page>
  <error-page>
    <error-code>504</error-code>
    <location>/50x.html</location>
  </error-page>

</web-app>
